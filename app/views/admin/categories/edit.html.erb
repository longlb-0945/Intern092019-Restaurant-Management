<% provide :title, t("edit_category") %>
<% content_for :content_header do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark"><%= t("edit_category").upcase %></h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
          <%= link_to t("dashboard"), admin_dashboard_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to t("list_category"), admin_categories_path %>
        </li>
        <li class="breadcrumb-item active"><%= t "edit_category" %></li>
      </ol>
    </div>
  </div>
<% end %>

<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="card">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label t "name" %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: t("name") %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label t "image" %>
        </div>
        <div class="col-10">
          <%= f.file_field :image, class: "form-control upload-img" %>
        </div>
      </div>

      <div class="row">
        <%= image_tag @category.image, class: "rounded mx-auto d-block preview-img" if @category.image.attached? %>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= f.submit t("submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
