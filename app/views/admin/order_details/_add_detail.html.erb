<% if @order.accepted? %>
  <%= form_for @order_detail_product, url: admin_order_order_details_path, method: :post, class: "form-horizontal", remote: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="card-body">
      <div class="form-group row">
        <div class="col-10">
          <%= f.select(:product_id, load_product_select(params[:order_id]), {include_hidden: false}, id: "list-products", class: "form-control") %>
        </div>
        <div class="col-2">
          <%= f.submit t("add"), class: "btn btn-primary form-control", remote: true %>
        </div>
      </div>
    </div>
  <% end %>
<% elsif @order.paid? %>
  <%= image_tag Settings.paid_img, alt: "", class: "paid-img rounded mx-auto d-block" %>
<% end %>
