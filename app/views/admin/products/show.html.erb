<% provide :title, t("show_product_title") %>
<% content_for :content_header do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark"><%= t "show_product_title" %></h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
          <%= link_to t("dashboard"), admin_dashboard_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to t("list_product_title"), admin_products_path %>
        </li>
        <li class="breadcrumb-item active"><%= t "show_product_title" %></li>
      </ol>
    </div>
  </div>
<% end %>

<div class="row" style="margin: 10px;">
  <div class="col-6 product-show-wrap-img">
    <%= image_tag @product.image, class: "rounded mx-auto d-block" if @product.image.attached? %>
  </div>
  <div class="col-6 product-show-info">
    <table class="table">
      <tbody>
        <tr>
          <td><%= t "name" %></td>
          <td class="content"><label class="bagde bg-primary"><%= @product.name %></label></td>
        </tr>
        <tr>
          <td><%= t "category" %></td>
          <td class="content"><label class="bagde bg-info"><%= @product.category_name %></label></td>
        </tr>
        <tr>
          <td><%= t "price" %></td>
          <td class="content">
            <label class="bagde bg-info"> <%= number_with_delimiter(@product.price, delimiter: ",") %></label>
            <span><%= t "currency" %></span>
          </td>
        </tr>
        <tr>
          <td><%= t "status" %> </td>
          <td class="content"><label class="bagde bg-<%= product_status_check(@product) %>"><%= @product.status.humanize %></label></td>
        </tr>
      </tbody>
    </table>
    <div>
      <span><%= t "rate" %>: <%= @product.total_rate %></span>
    </div><br><br>
    <div class="callout callout-info">
      <h3><b><%= t "short_description" %></b></h3>
      <p><%= @product.short_description %></p>
    </div>
</div>
