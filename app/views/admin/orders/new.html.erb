<% provide :title, t("new_reservation_title") %>
<% content_for :content_header do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark"><%= t("new_reservation_title").upcase %></h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
          <%= link_to t("dashboard"), admin_dashboard_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to t("order_list"), admin_orders_path %>
        </li>
        <li class="breadcrumb-item active"><%= t "new_reservation_title" %></li>
      </ol>
    </div>
  </div>
<% end %>

<%= form_for [:admin, @order], html: {class: "form-horizontal form-order-new"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="card">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label t("name"), class: "input-require" %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: t("name"), required: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label t("phone"), class: "input-require" %>
        </div>
        <div class="col-10">
         <%= f.text_field :phone, class: "form-control", placeholder: t("phone"), required: true  %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label t("address"), class: "input-require" %>
        </div>
        <div class="col-10">
         <%= f.text_field :address, class: "form-control", placeholder: t("address"), required: true  %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2 col-form-label">
           <%= f.label t("person_number"), class: "input-require" %>
        </div>
        <div class="col-10">
          <%= f.number_field :person_number, min: Settings.min_book_size, class: "form-control", placeholder: t("person_number"), required: true %>
        </div>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= f.submit t("submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
