<tr class="trow">
  <td></td>
  <td>
    <% if order.staff&.image %>
      <%= image_tag order.staff_image, class: "order-person-img rounded-circle" if order.staff_image.attached? %>
      <%= link_to order.staff_name, admin_user_path(order.staff), class: "d-block" %>
    <% else %>
      <span class="order-person-empty">X</span>
    <% end %>
  </td>
  <td>
    <% if order.customer&.image %>
      <%= image_tag order.customer_image, class: "order-person-img rounded-circle" if order.customer_image.attached? %>
      <%= link_to order.customer_name, admin_user_path(order.customer) %>
    <% else %>
      <span class="order-person-empty">X</span>
    <% end %>
  </td>
  <td>
    <label class="badge <%= check_order_status(order) %>"><%= order.status.humanize %></label>
  </td>
  <td><%= order.name %></td>
  <td><%= order.phone %></td>
  <td><%= order.address %></td>
  <td class="text-center"><span class="bagde"><%= order.person_number %></span></td>
  <td class="text-center"><span class="bagde"><%= order.total_amount %></span></td>
  <td>
    <%= link_to t("details"), edit_admin_order_path(order), class: "btn btn-info" %>
    <% if order.accepted? || order.paid? %>
      <%= link_to t("order"), admin_order_order_details_path(order), class: "btn btn-warning" %>
    <% end %>
  </td>
</tr>
