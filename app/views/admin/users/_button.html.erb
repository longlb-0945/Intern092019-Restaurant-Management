<% unless current_user == user %>
  <% if user.enable? %>
    <%= link_to t("edit"), edit_admin_user_path(user), class: "btn btn-primary btn_edit edit_#{user.id}" %>
    <%= link_to t("disable"), admin_user_path(user), class: "btn btn-danger btn_delete", id: "btn_disable_#{user.id}",
      method: :delete, data: { confirm: t("user_confirm") }, remote: true %>
  <% elsif user.disable? %>
    <%= link_to t("enable"), admin_user_path(user), class: "btn btn-primary btn_delete", id: "btn_disable_#{user.id}",
      method: :delete, data: { confirm: t("user_confirm_enable") }, remote: true %>
  <% end %>
<% end %>
