<% provide :title, t("new_user") %>
<% content_for :content_header do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark"><%= t("new_user").upcase %></h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
          <%= link_to t("dashboard"), admin_dashboard_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to t("list_user_banner"), admin_users_path %>
        </li>
        <li class="breadcrumb-item active"><%= t "new_user" %></li>
      </ol>
    </div>
  </div>
<% end %>

<%= form_for [:admin, @user], html: {class: "form-horizontal form-user-new"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="card">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-3 col-form-label">
          <%= f.label t"name" %><span class="input-require"></span>
        </div>
        <div class="col-9">
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3 col-form-label">
          <%= f.label t"email" %><span class="input-require"></span>
        </div>
        <div class="col-9">
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3 col-form-label">
          <%= f.label t"password" %><span class="input-require"></span>
        </div>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-3 col-form-label">
          <%= f.label t"confirmation" %><span class="input-require"></span>
        </div>
        <div class="col-9">
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= f.submit t("new_acc_admin"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
