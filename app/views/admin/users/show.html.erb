<% provide :title, t("show_profile") %>
<% content_for :content_header do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark"><%= t "show_profile" %></h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
          <%= link_to t("dashboard"), admin_dashboard_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to t("list_user_banner"), admin_users_path %>
        </li>
        <li class="breadcrumb-item active"><%= t "show_profile" %></li>
      </ol>
    </div>
  </div>
<% end %>
<div class="row row_profile">
  <%= image_tag @user.image, alt: "", class: "show_user_icon" if @user.image.attached? %>
  <hr class="image_divider">
</div>
<div class="row show_user">
  <table class="table table-responsive show_user_table">
    <tr>
      <td class="show_user_label"><b><%= t "name" %>:</b></td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td class="show_user_label"><b><%= t "email" %>:</b></td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td class="show_user_label"><b><%= t "created_at" %>:</b></td>
      <td><%= time_tag @user.created_at %></td>
    </tr>
    <tr>
      <td class="show_user_label"><b><%= t "updated_at" %>:</b></td>
      <td><%= time_tag @user.updated_at %></td>
    </tr>
    <tr>
      <td colspan="2"><hr class="table_divider"></td>
    </tr>
    <tr>
      <td colspan="2" class="td_btn_show_profile">
        <%= link_to t("edit"), edit_admin_user_path, class: "btn btn-primary" %>
      </td>
    </tr>
  </table>
</div>
