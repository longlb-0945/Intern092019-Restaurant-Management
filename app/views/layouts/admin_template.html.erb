<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" %>
    <%= stylesheet_link_tag "admin", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "admin", "data-turbolinks-track": "reload" %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <%= render "layouts/admin_navbar" %>
      </nav>
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <%= render "layouts/admin_main_slidebar" %>
      </aside>
      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <%= yield(:content_header) %>
          </div>
        </div><hr>

        <section class="content">
          <div class="container-fluid admin-flash-message">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-top alert-<%= message_type %>"><p><%= message %></p></div>
            <% end %>
          </div>
          <div class="container-fluid">
              <%= yield %>
          </div>
        </section>
      </div>
      <footer class="main-footer">
        <%= render "layouts/admin_footer" %>
      </footer>
    </div>
  </body>
</html>
