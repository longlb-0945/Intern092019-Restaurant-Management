<% provide :title, @product.name.humanize %>
<% provide :small_banner, t("show") %>
<% provide :big_banner, @product.name.humanize %>

<div class="row product-show">
  <div class="col-sm-6 product-show-wrap-img">
    <%= image_tag @product.image, class: "" if @product.image.attached? %>
  </div>
  <div class="col-sm-6 product-show-info">
    <table class="table">
      <tbody>
        <tr>
          <td><%= t "name" %></td>
          <td class="content"><label class=""><%= @product.name %></label></td>
        </tr>
        <tr>
          <td><%= t "category" %></td>
          <td class="content"><label class=""><%= @product.category_name %></label></td>
        </tr>
        <tr>
          <td><%= t "price" %></td>
          <td class="content">
            <label class=""> <%= number_with_delimiter(@product.price, delimiter: ",") %></label>
            <span><%= t "currency" %></span>
          </td>
        </tr>
        <tr>
          <td><%= t "status" %> </td>
          <td class="content"><label class="bagde bg-<%= product_status_check(@product) %>"><%= @product.status.humanize %></label></td>
        </tr>
      </tbody>
    </table>
    <div>
      <span><b><%= t "rate" %></b>: <%= @product.total_rate %></span>
    </div><br><br>
    <div class="">
      <h3><b><%= t "short_description" %></b></h3>
      <p><%= @product.short_description %></p>
    </div>
  </div>
</div>
