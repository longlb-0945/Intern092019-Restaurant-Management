<% provide :title, t("all_product") %>
<% provide :small_banner, t("show") %>
<% provide :big_banner, t("all_product") %>

<div class="container-fluid public-product-show shadow">
  <div class="row">
    <div class="pull-right">
      <%= form_tag public_all_product_sort_path, class: "form-inline", method: :get do %>
        <div class="form-group">
          <%= select_tag :sort, options_for_select(product_sort_list, params[:sort]), class: "form-control sort-select" %>
        </div>
      <% end %>
    </div>
    <div class="pull-left">
      <button type="button" class="btn btn-primary"><%= t "total" %> <span class="badge"><%= @products.size %></span></button>
    </div>
  </div><hr>

  <div class="row">
    <% if @products.empty? %>
      <div class="alert alert-danger"><%= t "category_no_product" %></div>
    <% else %>
      <% @products.each do |product| %>
        <%= render "product", product: product %>
      <% end %>
    <% end %>
  </div><hr>
  <div class="row paginate_row" >
    <%= paginate @products %>
  </div>
</div>
